<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shorturl.mapper.UserReviewMapper">

    <resultMap id="BaseResultMap" type="com.shorturl.entity.UserReview">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="avatar_base64" property="avatarBase64"/>
        <result column="content" property="content"/>
        <result column="rating" property="rating"/>
        <result column="create_time" property="createTime"/>
        <result column="status" property="status"/>
    </resultMap>

    <insert id="insert" parameterType="com.shorturl.entity.UserReview" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_review (user_id, username, avatar_base64, content, rating, create_time, status)
        VALUES (#{userId}, #{username}, #{avatarBase64}, #{content}, #{rating}, #{createTime}, #{status})
    </insert>

    <select id="selectList" resultMap="BaseResultMap">
        SELECT * FROM user_review
        WHERE status = 1
        ORDER BY create_time DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM user_review
        WHERE user_id = #{userId} AND status = 1
        LIMIT 1
    </select>

    <update id="update" parameterType="com.shorturl.entity.UserReview">
        UPDATE user_review
        SET content = #{content},
            rating = #{rating}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM user_review
        WHERE id = #{id}
    </delete>

</mapper>

